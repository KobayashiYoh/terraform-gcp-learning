{
  "name": "functions-project",
  "version": "1.0.0",
  "description": "Node.js project for Cloud Functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --minify --sourcemap --platform=node --format=cjs --outfile=./dist/index.js",
    "postbuild": "cp package.json ./dist/package.json && cd dist && npm install",
    "deploy": "gcloud functions deploy hello-world-to-discord --gen2 --runtime=nodejs20 --region=asia-northeast1 --trigger-http --allow-unauthenticated --memory=128Mi"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.5",
    "axios": "^1.8.1",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0"
  }
}
